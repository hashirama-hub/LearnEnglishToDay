<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/left"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total question:"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answered Correct:"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answered Wrong"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test points:"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current test average"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overall test average"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_toRightOf="@+id/left"
        android:id="@+id/right"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_total_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/tv_answered_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/tv_answered_wrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/tv_test_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/tv_current_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/tv_overall_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:padding="5dp"/>

    </LinearLayout>


</RelativeLayout>